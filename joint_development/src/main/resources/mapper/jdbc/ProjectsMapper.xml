<?xml version ="1.0" encoding ="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mapper と xml の マッピング -->
<mapper namespace="com.example.joint_development.repository.ProjectsMapper">

    <!-- マッピング定義-->
    <resultMap id="project" type="com.example.joint_development.domain.Projects">
        <id column="project_id" property="projectId"/>
        <result column="user_id" property="userId"/>
        <result column="post_date" property="postDate"/>
        <result column="team_name" property="teamName"/>
        <result column="content" property="content"/>
        <result column="start_date" property="startDate"/>
        <result column="end_date" property="endDate"/>
        <result column="frequency_month_or_week" property="frequencyMonthOrWeek"/>
        <result column="frequency_day" property="frequencyDay"/>
        <association property="recruitLang" resultMap="recruitLang"></association>
        <collection property="projectUserList" resultMap="projectUserList"></collection>
    </resultMap>

    <!-- マッピング定義（recruitLang）-->
    <resultMap id="recruitLang" type="com.example.joint_development.domain.RecruitLang">
        <id column="project_id" property="projectId"/>
        <result column="lang_cl" property="langCl"/>
        <result column="lang_web" property="langWeb"/>
        <result column="lang_fr" property="langFr"/>
        <result column="lang_ml" property="langMl"/>
        <result column="lang_qa" property="langQa"/>
    </resultMap>

    <!-- マッピング定義（projectUserList）-->
    <resultMap id="projectUserList" type="com.example.joint_development.domain.ProjectUser">
        <id column="user_id" property="userId"/>
        <result column="name" property="name"/>
    </resultMap>

    <!-- プロジェクト 作成 -->
    <insert id ="makeProject" useGeneratedKeys="true" keyColumn="project_id" keyProperty="projectId">
        insert into projects(user_id,post_date,team_name,content,start_date,end_date,frequency_month_or_week,frequency_day)
        values (#{userId},CURRENT_DATE,#{teamName},#{content},#{startDate},#{endDate},#{frequencyMonthOrWeek},#{frequencyDay})
    </insert>

    <!-- 最新プロジェクトID検索-->
    <select id="searchPId" resultType="int">
        select max(project_id) from projects
    </select>

    <!-- プロジェクト概要-->
    <select id="findProjectList" resultType="Projects">
        select * from projects
    </select>

    <!-- プロジェクト詳細1件取得 -->
    <select id="findDetailProject" resultMap="project">
        select 
        projects.project_id,projects.user_id,projects.post_date,projects.team_name,projects.content,
        projects.start_date,projects.end_date,projects.frequency_month,projects.frequency_week,projects.frequency_date,
        recruitLang.lang_cl,recruitLang.lang_web,recruitLang.lang_fr,recruitLang.lang_ml,recruitLang.lang_qa
        users.user_id,users.name 
        from projects 
        join recruitLang on projects.project_id = recruitLang.project_id
        join belongs on projects.project_id = belongs.project_id
        join users on belongs.user_id= users.user_id
        where
        projects.project_id=#{projectId}
        belongs.status =='BELONGS'
    </select>

</mapper>
